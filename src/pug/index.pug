extends _layout

mixin article(title, link, linkText)
	article.card
		.card-body
			h1=title
			block
		if link
			.card-command
				a(href=link)= linkText ? linkText : "もっとみる..."

block title
	title Xeltica
	+og(
		"Xeltica", 
		"Webとネイティブのアプリと、ゲームを作る人",
		"創作, ゲーム, アプリ開発, エンジニアリング, Xeltica",
		"assets/cat.jpg",
		true
		)
	meta(name="theme-color", content="#f44336")

block script
	+js("https://cdnjs.cloudflare.com/ajax/libs/animejs/2.2.0/anime.min")
	script.
		window.onload = function () {
			let icon = document.getElementById("xeltica_face");
			let anm = anime({
					targets: icon,
					rotateZ: 360,
					duration: 600,
					easing: "easeInOutCubic",
					autoplay: false
				});
			icon.addEventListener("click", () => {
				anm.restart();
			});
		}


block body
	.root
		header#header
			h1 Xeltica
		main
			.container
				.row
					.col-4
						img#xeltica_face.face(src="assets/cat.jpg")
					.col-8.desc
						p 
							span.nobr ウェブアプリ、
							span.nobr ネイティブアプリ、
							span.nobr ゲームなどを
							span.nobr 作っています。
						p 
							span.nobr 東京都内の
							span.nobr 某企業で
							span.nobr フロントエンドエンジニアを
							span.nobr やっています。
						p 
							a(href="//axella.jp") Axella 
							| の管理人やってます。
						
						p
							| 日本語
							|  ・ 
							a(href="/en") English

						ul.buttons
							li.button#twitter
								a(href="https://twitter.com/XelticaWorks"): span.fab.fa-twitter.fa-fw
								.tooltip Twitter
							li.button#soundcloud
								a(href="https://soundcloud.com/Xeltica"): span.fab.fa-soundcloud.fa-fw
								.tooltip SoundCloud
							li.button#github
								a(href="https://github.com/xeltica"): span.fab.fa-github.fa-fw
								.tooltip GitHub
							li.button#misskey
								a(href="https://mi.citringo.net/@xeltica"): img(src="/assets/mi.svg")
								.tooltip Misskey
							li.button#youtube
								a(href="https://www.youtube.com/channel/UCljiMx6DoPrDnsy6uqHlPTw"): span.fab.fa-youtube.fa-fw
								.tooltip YouTube
							li.button#wordpress
								a(href="https://blog.citringo.net"): span.fab.fa-wordpress.fa-fw
								.tooltip ブログ
							li.button#musica
								a(href="https://musica.citringo.net"): span.fas.fa-music.fa-fw
								.tooltip オリジナル曲集

							+article("プロダクト", "/product.html")
								p 僕が制作したソフトウェアやゲームを公開しています。
							+article("ギャラリー", "/gallery.html")
								p 頂き物のイラスト一覧。
							+article("キャラクター", "/char.html")
