extends _layout

mixin skill(title, icon, link)
	if link
		a(href=link)
			+skillview(title, icon)
	else
		+skillview(title, icon)

mixin skillview(title, icon)
	.skill
		.img-wrapper
			if icon
				img(src=icon, alt=title)
			else
				p(style="color: #242424") NO IMAGE

mixin product(title, link, tag, imgsrc)
	.product
		.background(style=`background: url("${imgsrc}")`)
		a(href=link)
			.description
				h1= title
				small.tag
					i.fas.fa-tag
					| &emsp;
					!=tag
				block

mixin record(title, art)
	.record
		if art
			.art
				img(src=art, alt=title)
		.desc
			h1= title
			block

