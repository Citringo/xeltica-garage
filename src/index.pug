block script
	+js("https://cdnjs.cloudflare.com/ajax/libs/animejs/2.2.0/anime.min")
	script.
		let attack = 0;
		let timeout;
		window.onload = function () {
			const icon = document.getElementById("avatar");
			icon.addEventListener("click", () => {
				attack++;
				if (timeout) clearTimeout(timeout);
				anime({
					targets: icon,
					rotate: attack * 30,
					duration: 200,
					easing: "easeInOutBack",
					autoplay: true,
					complete() {
						if (attack >= 12)
							location.pathname = "/product/hage.html";
					}
				});
				timeout = setTimeout(() => {
					attack = 0;
					anime({
						targets: icon,
						rotate: 0,
						duration: 300,
						easing: "easeInOutBack",
						autoplay: true,
					});
				}, 800);
				
			});
		}
	+js("/js/index")


